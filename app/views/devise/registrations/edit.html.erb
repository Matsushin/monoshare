<%= render partial: 'layouts/header',locals:{item:@item} %>


<div class=" form-group text-center bg-white mx-auto " style="width:800px;">

  <h4 class="mx-auto py-5 border-bottom">ユーザー編集</h4>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <!--サインアップ時に名前を入力できるようにフォームを追加-->
    <p class="mx-auto pt-2">ユーザー画像</p>
    <%= f.file_field :image ,class:'p-5 border rounded'%>

    <div class="field my-4">
      <%= f.label :ユーザー名 %><br />
      <%= f.text_field :username, autofocus: true ,class: 'form-control mx-auto',style: 'width:300px;' %>
    </div>

    <div class="field my-4">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: 'form-control mx-auto',style: 'width:300px;' %>
    </div>

    <div class="field my-4">
      <%= f.label :自己紹介 %><br />
      <%= f.text_area :self_introduction, autofocus: true, autocomplete: "self_introduction" ,class: 'form-control mx-auto',style: 'width:500px; height:150px'%>
    </div>

    <div class="field my-4">
      <%= f.label :リクエスト %><br />
      <%= f.text_area :request, autofocus: true, autocomplete: "request",class: 'form-control mx-auto',style: 'width:500px; height:150px'%>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field ">
      <%= f.label :パスワード %> <br />
      <%= f.password_field :password, autocomplete: "new-password",class: 'form-control mx-auto',style: 'width:300px;' %>
      <% if @minimum_password_length %>
        <br />

      <% end %>
    </div>

    <div class="field ">
      <%= f.label :パスワード確認 %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class: 'form-control mx-auto',style: 'width:300px;'%>
    </div>

    <div class="field my-4">
      <%= f.label :新しいパスワード %><br />
      <%= f.password_field :current_password, autocomplete: "current-password" ,class: 'form-control mx-auto',style: 'width:300px;'%>
    </div>

    <div class="actions">
      <%= f.submit "更新する" ,class: 'button btn btn-danger mt-3 mb-5',style: 'width:150px;'%>
    </div>
  <% end %>


  <%= link_to "戻る", :back ,class: 'button btn btn-primary mt-3 mb-5',style: 'width:150px;'%>

</div>
